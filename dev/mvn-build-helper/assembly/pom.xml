<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.blaze</groupId>
    <artifactId>blaze-engine</artifactId>
    <version>${revision}</version>
    <relativePath>../../../</relativePath>
  </parent>
  <groupId>org.blaze</groupId>
  <artifactId>assembly</artifactId>
  <packaging>jar</packaging>

  <dependencies>
    <dependency>
      <groupId>org.blaze</groupId>
      <artifactId>${shimPkg}</artifactId>
      <version>${revision}</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <!-- create uber jar -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <goals>
              <goal>shade</goal>
            </goals>
            <phase>package</phase>
            <configuration>
              <createDependencyReducedPom>false</createDependencyReducedPom>
              <artifactSet>
                <excludes>
                  <exclude>*:commons-codec</exclude>
                  <exclude>*:commons-compress</exclude>
                  <exclude>*:commons-io</exclude>
                  <exclude>*:commons-lang3</exclude>
                  <exclude>*:jackson-*</exclude>
                  <exclude>*:log4j-*</exclude>
                  <exclude>*:slf4j-*</exclude>
                  <exclude>*:zstd-jni</exclude>
                  <exclude>*:scala-library</exclude>
                  <exclude>*:scala-reflect</exclude>
                </excludes>
              </artifactSet>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>org/apache/commons/codec/**/*</exclude>
                    <exclude>org/apache/commons/compress/**/*</exclude>
                    <exclude>org/slf4j/**/*</exclude>
                    <excludes>META-INF/*.SF</excludes>
                    <excludes>META-INF/*.DSA</excludes>
                    <excludes>META-INF/*.RSA</excludes>
                    <excludes>**/*.semanticdb</excludes>
                  </excludes>
                </filter>
              </filters>
              <relocations>
                <relocation>
                  <pattern>com.google.flatbuffers</pattern>
                  <shadedPattern>blaze.com.google.flatbuffers</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>com.google.protobuf</pattern>
                  <shadedPattern>blaze.com.google.protobuf</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.apache.arrow</pattern>
                  <shadedPattern>blaze.org.apache.arrow</shadedPattern>
                  <excludes>
                    <exclude>org.apache.arrow.c.**</exclude>
                  </excludes>
                </relocation>
              </relocations>
              <archive>
                <addMavenDescriptor>false</addMavenDescriptor>
              </archive>
              <outputFile>../../../target/blaze-engine-${shimName}-${releaseMode}-${revision}.jar</outputFile>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
